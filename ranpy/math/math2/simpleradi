#!/usr/bin/env python3

import sys

radical = int(sys.argv[1])
persq = [4,9,16,25,36,49,64,81,100,121,144,169,196,225,256,289,324,361,400]

negative = False

if radical < 0:
    radical = radical * -1
    negative = True

for num in persq[::-1]:
    if negative == True:
        if radical in persq:
            print(str(radical ** (1/2))+"i")
            break
        elif radical % num <= 0:
            print(str(num ** (1/2))+"i√"+str(radical/num))
            break
    else:
        if radical in persq:
            print(radical ** (1/2))
            break
        elif radical % num <= 0:
            print(str(num ** (1/2))+"√"+str(radical/num))
            break
else:
    if negative == True:
        print("i√" + str(radical))
    else:
        print("√" + str(radical))
