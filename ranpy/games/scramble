#!/usr/bin/env python3

import skilstak.colors as c
import random

print(c.clear+c.green+"This is a word scramble game.")
x = input("Would you like easy or hard mode? > ").lower()

if x == "easy":
    words = ['school', 'coding', 'lamp', 'joker', 'queen', 'basket', 'table', 'vase', 'gossip', 'couch']
    word = random.choice(words)
    shuffled = list(word)
    random.shuffle(shuffled)
    tries = 3
    correct = ''.join(shuffled)
    while tries > 0:
        print(correct)
        guess = input("What is your guess? > ")
        if guess == word:
            print("You guessed correctly!")
            break
        else:
            tries -= 1
            print("Try again!")
    while tries == 0:
        print("You lose!")
        print("The word was " + word)
        break


if x == "hard":
    words = ('automobile', 'television', 'refrigerator', 'countertop', 'granite', 'soundbar', 'magazine', 'shopping', 'remote', 'coaster')
    word = random.choice(words)
    shuffled = list(word)
    random.shuffle(shuffled)
    tries = 3
    correct = ''.join(shuffled)
    while tries > 0:
        print(correct)
        guess = input("What is your guess? > ")
        if guess == word:
            print("You guessed correctly!")
            break
        else:
            tries -=1
            print("Try again!")
    while tries == 0:
        print("You lose!")
        print("The word was " + word)
        break
